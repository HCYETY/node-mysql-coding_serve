{
  "compilerOptions": {
    "target": "ES2017",  
    "module": "CommonJS",    
    "sourceMap": true,
    "watch": true,
    "strict": true,              
    "esModuleInterop": true,   
    // "outDir": "../dist", 
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,  
    "declaration": true,   
    "noImplicitAny": false, // 防止对象隐式具有'任何'类型
    "forceConsistentCasingInFileNames": true, 
    "strictNullChecks": false,    
    "skipLibCheck": true, 
    "baseUrl": ".",
    "paths": {
      "img/*": ["./img/*"],
      "src/*": ["./src/*"],
      "config": ["src/config"],
      "entity/*": ["src/entity/*"],
      "middleware/*": ["./src/middleware/*"],
    },
  },
  "include": [
    "./src/*",
    "./ormconfig.js", 
    "sendEmail.js",  
  ],
  "exclude": [
    "./node_modules"
  ]
}
